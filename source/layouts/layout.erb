<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title || "Saha" %></title>
    
    <%= stylesheet_link_tag "saha", "bootstrap" %>
    <%= javascript_include_tag  "all" %>
  </head>
  
  <body class="<%= page_classes %>">
    
    <div class="container">
      <div class="navbar">
        <div class="navbar-inner">
          <%= link_to "Saha", "index.html", :class => "brand" %>
          <ul class="nav">
            <li class=<%= data.page.nav_home || "" %>><%= link_to "Home", "index.html" %></li>
            <li class=<%= data.page.nav_logs || "" %>><%= link_to "Logs", "logs.html" %></li>
            <li class=<%= data.page.nav_docs || "" %>><%= link_to "Docs", "documents.html" %></li>
            <li class=<%= data.page.nav_slides || "" %>><%= link_to "Slides", "slides.html" %></li>            
            <li class=<%= data.page.nav_refs || "" %>><%= link_to "References", "references.html" %></li>
          </ul>
        </div>
      </div>
    </div>
    
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>